# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/football_prediction_db"
DIRECT_URL="postgresql://username:password@localhost:5432/football_prediction_db"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Social Authentication
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Football Data APIs
FOOTBALL_DATA_API_KEY="your-football-data-api-key"
SPORTS_API_KEY="your-sports-api-key"
SPORTMONKS_API_KEY="your-sportmonks-api-key"

# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Email Configuration (Resend)
RESEND_API_KEY="your-resend-api-key"

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# File Upload
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Webhook URLs
WEBHOOK_SECRET="your-webhook-secret"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_REQUESTS_PER_HOUR="1000"

# Feature Flags
ENABLE_AI_PREDICTIONS="true"
ENABLE_LIVE_MATCHES="true"
ENABLE_BETTING_ODDS="true"
ENABLE_EMAIL_NOTIFICATIONS="true"

# Development
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"